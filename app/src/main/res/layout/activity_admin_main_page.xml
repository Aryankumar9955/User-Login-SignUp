<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background5"
    tools:context=".AdminMainPage">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:layout_marginTop="-120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo5" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button7"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/baseline_apartment_24"
                android:insetRight="5dp"
                android:onClick="about"
                android:text="About Exposys"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button10"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/baseline_school_24"
                android:insetRight="5dp"
                android:onClick="applicants"
                android:text="Internship Applicants"
                app:cornerRadius="40dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button12"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/baseline_account_tree_24"
                android:insetRight="5dp"
                android:onClick="domain"
                android:text="Internship Domain"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/button13"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/baseline_contact_mail_24"
                android:insetRight="5dp"
                android:onClick="contact"
                android:text="Contact us"
                app:cornerRadius="40dp" />
        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>